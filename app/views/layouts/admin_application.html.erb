<!DOCTYPE html>
<html>
  <head>
    <title>Tawamure</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container">
                <a class="navbar-brand" href="/">
                  <span class="text-light">TAWAMURE</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                        <% if admin_signed_in? %>
                            <li>
                                <%= link_to admins_posts_path,class: 'nav-link text-light' do %>
                                    <i class="fas fa-edit"></i>投稿
                                <% end %>
                            </li>
                            <li>
                                <%= link_to admins_groups_path,class: 'nav-link text-light' do %>
                                    <i class="fas fa-mountain"></i>カテゴリ
                                <% end %>
                            </li>
                            <li>
                                <%= link_to admins_users_path,class: 'nav-link text-light' do %>
                                    <i class="fas fa-users"></i>ユーザー
                                <% end %>
                            </li>
                            <li>
                                <%= link_to destroy_admin_session_path,method: :delete,class: 'nav-link text-light' do %>
                                    <i class="fas fa-sign-out-alt"></i>ログアウト
                                <% end %>
                            </li>
                        <% else %>
                            <li>
                                <%= link_to new_admin_session_path,class: 'nav-link text-light' do %>
                                    <i class="fas fa-sign-in-alt"></i>ログイン
                                <% end %>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <%= yield %>
  </body>
</html>
