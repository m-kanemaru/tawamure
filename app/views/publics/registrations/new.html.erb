<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>新規登録</h2>
      
        <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "publics/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :メール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        
        <div>
          <%= f.label :誕生日 %><br />
          <%= f.date_select :birthdate, autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :電話番号 %><br />
          <%= f.text_field :mobile, autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions mt-1">
          <%= f.submit "登録",class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>

      <%= render "publics/shared/links" %>
    </div>
  </div>
</div>