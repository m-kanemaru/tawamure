<div class='container px-5 px-sm-0'>
    <div class='row'>
        <div class='col-md-3'>
            <h2>User</h2>
            <%= render 'publics/users/user', user: current_user %>
            <%= render 'publics/users/form', user: current_user %>
        </div>
        <div class='col-md-8 offset-md-1'>
            <%= render 'searches/search', range: Post %>
            <h2>投稿一覧</h2>
            <% if @user.followings.count != 0 %>
                <%= render 'publics/posts/index', posts: @posts %>
            <% else %>
                <div class='mt-5'>
                    <p>フォローしているユーザーはいません</p>
                    <%= link_to "ユーザーを探す", users_path %><br>
                    <%= link_to "カテゴリから探す", groups_path %>
                </div>
            <% end %>
        </div>
    </div>
</div>