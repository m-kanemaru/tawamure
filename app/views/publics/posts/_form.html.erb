<%= form_with model: post,local:true do |f| %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image_id, accept: 'image/*', class: "form-control-file" %>
  </div>
  
  <div class="form-group">
    <%= f.label :sentence %>
    <%= f.text_area :text, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>

<% end %>