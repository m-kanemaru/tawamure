<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <% if current_user != user %>
        <tr>
          <td><%= image_tag user.get_image_id, size: '100x100',class:'rounded-circle' %></td>
          <td><%= user.nickname %></td>
          <td><%= user.introduction %></td>
          <td id="follow_btn_<%= user.id %>"><%= render "publics/relationships/btn",user: user %></td>
          <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>