<% chats.each do |chat| %>
    <% if chat.user_id != current_user.id %>
        <tr>
            <th>
                <div style="text-align: left;">
                    <p><%= chat.message %></p>
                    <div class="text-secondary">
                        <%= chat.created_at.strftime('%Y/%m/%d %H:%M') %>
                    </div>
                </div>
            </th>
            <th></th>
        </tr>
    <% else %>
        <tr>
            <th></th>
            <th>
                <div style="text-align: right;">
                    <p><%= chat.message %></p>
                    <div class="text-secondary">
                        <%= chat.created_at.strftime('%Y/%m/%d %H:%M') %>
                    </div>
                </div>
            </th>
        </tr>
    <% end %>
<% end %>
