<% chats.each do |chat| %>
    <% if chat.user_id != current_user.id %>
        <tr>
            <th>
               <p style="text-align: left;">
                    <%= chat.message %>
                </p>
                <%= chat.created_at.strftime('%Y/%m/%d %H:%M') %>
            </th>
            <th></th>
        </tr>
    <% else %>
        <tr>
            <th></th>
            <th>
                <p style="text-align: right;">
                    <%= chat.message %>
                </p>
                <%= chat.created_at.strftime('%Y/%m/%d %H:%M') %>
            </th>
        </tr>
    <% end %>
<% end %>
