<% if post.favorited_by?(current_user) %>
    <div>
        <%= link_to post_post_favorites_path(post), method: :delete do %>
            <span style="color:red;">♥<%= post.post_favorites.count %></span>
        <% end %>
    </div>
<% else %>
    <div>
        <%= link_to post_post_favorites_path(post), method: :post do %>
            <span style="color:blue;">♥<%= post.post_favorites.count %></span>
        <% end %>
    </div>
<% end %>
