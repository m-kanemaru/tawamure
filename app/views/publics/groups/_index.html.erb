      <table>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
                <td><%= image_tag group.get_image_id, size:'50x50' %></td>
                <td><%= link_to group.title, group_path(group) %></td>
                <td><%= group.introduction %></td>
                <td>
                    <%= group.users.count %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>