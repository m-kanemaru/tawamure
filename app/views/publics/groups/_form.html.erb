<%= form_with model: group, local: true do |f| %>
  <div class="form-group">
    <%= f.label :group %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image_id, accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= f.submit  %>
  </div>
<% end %>