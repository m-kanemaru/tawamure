<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>ログイン</h2>
      
        <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <%= render "publics/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :メール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :記憶させいますか？ %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "サインイン",class: 'btn btn-sm btn-primary' %>
        </div>
      <% end %>
      
      <%= render "publics/shared/links" %>
    </div>
  </div>
</div>