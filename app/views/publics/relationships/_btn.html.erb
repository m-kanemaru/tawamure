<% if current_user != user %>
  <% if current_user.following?(user) %>
    <div>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote: true %>
    </div>
  <% else %>
    <div>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true %>
    </div>
  <% end %>
<% end %>