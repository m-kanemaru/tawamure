<div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <% f.select :range, 'Post' %>
        <% f.select :search, "partial_match" %>
        <%= f.submit'検索' %>

    <% end %>
        <i class="fa-regular fa-magnifying-glass"></i>
</div>