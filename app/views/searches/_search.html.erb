<div class="search_form mt-3">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%#= f.text_field :word, class:"search" %>
        <%= f.hidden_field :range, value: range %>
        <%#= f.select :range, options_for_select([['User'], ['Post']]) %>
        <%#= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
        <div class="input-group">
        	<input type="text" name="word" id="word" class="form-control" placeholder="検索">
            <%= button_tag type: "submit", class: "btn btn-default btn-secondary" do %>
               <i class="fas fa-search"></i>
            <% end %>
        </div>
    <% end %>
</div>
       